<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nanye.springcloud.dao.DeptDao">
    <insert id="addDept" parameterType="com.nanye.springcloud.pojo.Dept">
        insert into dept (dname, db_source)
        values (#{dname},DATABASE())
    </insert>

    <select id="queryById" resultType="com.nanye.springcloud.pojo.Dept" parameterType="long">
        select * from dept where deptno = #{id}
    </select>

    <select id="queryAll" resultType="com.nanye.springcloud.pojo.Dept">
        select * from dept
    </select>
</mapper>